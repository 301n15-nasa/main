<div class="asteroid flex-column">
    <h3> <%= asteroid.date; %> </h3>
    <h4> <%= asteroid.link; %> </h4>
    <p><%= asteroid.meters; %> </p>
    <% if(show) { %>
      <p>Diameter meters: <%= asteroid.meters; %> </p>
      <p> Diameter feet: <%= asteroid.feet; %> </p>
      <p>Hazardous: <%= asteroid.hazardous; %> </p>
      <p> Speed kmh: <%= asteroid.kmh; %> </p>
      <p>Speed mph: <%= asteroid.mph; %> </p>
      <div class="flex-row">
        <button id="update" class="button narrow">Update Details</button>
        <form class="narrow" action="/asteroids/<%= asteroid.id %>" method="POST">
          <input type="hidden" name="_method" value="delete">
          <input type="hidden" name="id" value=" <%= asteroid.id %>">
          <button id="delete" class="button">Delete Asteroid</button>
        </form>
      </div>
    <% } else { %>
      <a href="/asteroids/<%= asteroid.id %>"><button class="button">View Details</button></a>
    <% } %>
  </div>
  