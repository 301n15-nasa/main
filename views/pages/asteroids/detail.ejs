<div class="asteroid flex-column">
  <h3> <span class="show">Date: </span><%= asteroid.date; %> </h3>
  <h4> <span class="show">Diameter: </span><%= asteroid.meters; %> meters (<%= asteroid.feet; %> feet)  </h4>
  <p> <span class="show">Hazardous: </span><%= asteroid.hazardous; %> </p>
    <% if(show) { %>
      <p><span class="show">Link: </span> <%= asteroid.link; %> </p>
      <p> <span class="show"> Kmh: </span><%= asteroid.kmh; %> </p>
      <p><span class="show">Mph: </span> <%= asteroid.mph; %> </p>
      <div class="flex-row">
        <button id="update" class="button narrow">Update Details</button>
        <form class="narrow" action="/asteroids/<%= asteroid.id %>" method="POST">
          <input type="hidden" name="_method" value="delete">
          <input type="hidden" name="id" value=" <%= asteroid.id %>">
          <button id="delete" class="button">Delete Asteroid</button>
        </form>
      </div>
    <% } else { %>
      <a href="/asteroids/<%= asteroid.id %>"><button class="button">View Details</button></a>
    <% } %>
  </div>
  